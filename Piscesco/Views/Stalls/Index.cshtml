@model IEnumerable<Piscesco.Models.Stall>
@using Piscesco.Controllers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BlobsController bc = new BlobsController();
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StallImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StallName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:center" class="center-td">
                <img src="@bc.GetImage(item.StallImage)" style="max-height:50px;max-width:100px" />
            </td>
            <td class="center-td">
                @Html.DisplayFor(modelItem => item.StallName)
            </td>
            <td class="center-td">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="center-td">
                <a asp-action="Edit" asp-route-id="@item.StallID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StallID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StallID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
