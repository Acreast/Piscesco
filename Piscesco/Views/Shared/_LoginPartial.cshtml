@using Microsoft.AspNetCore.Identity
@using Piscesco.Areas.Identity.Data

@using Piscesco.Controllers;

@inject SignInManager<PiscescoUser> SignInManager
@inject UserManager<PiscescoUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var loginSession = await UserManager.FindByIdAsync(UserManager.GetUserId(User));

        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>

        @if (loginSession.Role.Equals("Seller"))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="" asp-controller="Stalls" asp-action="Index">Manage Stalls</a>
            </li>
        }

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

        if (loginSession.Role.Equals("Customer"))
        {
            /*
            if (loginSession.OrderID == null)
            {
                // define an empty orderID if its not yet created
                TablesController tables = new TablesController(UserManager, SignInManager);
                await tables.UpdateUserOrderID(loginSession.Id);
            }
            */
            <li class="nav-item">
                <a id="browse" class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="BrowseProduct">Browse Product</a>
            </li>
            <li class="nav-item">
                <a id="cart" class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="CartList">Cart List</a>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
