@model Piscesco.Models.Product
@using Piscesco.Controllers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BlobsController bc = new BlobsController();
    Uri imageUri = bc.GetImage(Model.ProductImage);
}

@using Microsoft.AspNetCore.Identity
@using Piscesco.Areas.Identity.Data

@inject SignInManager<PiscescoUser> SignInManager
@inject UserManager<PiscescoUser> UserManager

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StallID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StallID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductUnit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class="col-sm-10">
            <img src="@imageUri" style="max-height:300px;max-width:300px" />
        </dd>
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User))
    {
        var loginSession = await UserManager.FindByIdAsync(UserManager.GetUserId(User));
        @if (loginSession.Role.Equals("Seller"))
        {
            <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a><p> | </p>
            <a asp-action="Index">Back to List</a>
        }
        else if (loginSession.Role.Equals("Customer"))
        {
            <a asp-action="BrowseProduct">Back to Browsing</a><p> | </p>
            <a asp-action="Index">Add to Cart</a>
        }
    }
</div>
